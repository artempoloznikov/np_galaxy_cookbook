<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="ehcache.xsd"
         updateCheck="false" monitoring="autodetect"
         dynamicConfig="true" name="mainCacheManager">
<!-- Ehcache documentation:
    http://ehcache.org/documentation/configuration/fast-restart
    http://ehcache.org/documentation/user-guide/storage-options
    -->

    <!-- Eviction policies: LFU (Least Frequently Used), LRU (Least Recently Used), FIFO -->
    <!-- timeToLiveSecond is the time in seconds from the point of creation in the cache till it expires
         (regardless of how frequently it is accessed in that time) -->
    <!-- timeToIdleSeconds is the time in seconds before an object in the cache expires if it is not accessed -->

    <!-- We don't need the diskStore path because we are not persisting the cache after restart. That requires
         the Enterprise, paid version. This also goes hand in hand with diskPersistent = true which also needs the
         <persistence> tag and can be used with the enterprise edition.
    <diskStore path="user.home"/>
     use this with overflowToDisk = true and <persistence strategy="localTempSwap"/>
    -->
    <diskStore path="<%= @tomcat_ehcache_disk_store_path %>"/>

    <defaultCache
            maxEntriesLocalHeap="10000"
            eternal="false"
            timeToIdleSeconds="120"
            timeToLiveSeconds="120"
            maxEntriesLocalDisk="10000000"
            diskExpiryThreadIntervalSeconds="120"
            memoryStoreEvictionPolicy="LRU">
        <persistence strategy="localTempSwap"/>
    </defaultCache>

