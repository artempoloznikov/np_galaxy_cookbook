log4j.rootLogger=INFO,Default,STD

log4j.appender.Default=org.apache.log4j.DailyRollingFileAppender
log4j.appender.Default.layout=org.apache.log4j.PatternLayout
log4j.appender.Default.layout.ConversionPattern=<%= @tomcat_log4j_default_conversion_pattern %>

log4j.appender.Default.DatePattern='.'yyyy-MM-dd
log4j.appender.Default.Append=true
log4j.appender.Default.File=<%= @tomcat_log4j_default_file %>
log4j.appender.Default.Threshold=INFO

log4j.appender.STD=org.apache.log4j.ConsoleAppender
log4j.appender.STD.layout=org.apache.log4j.PatternLayout
log4j.appender.STD.layout.ConversionPattern=<%= @tomcat_log4j_std_conversion_pattern %>
log4j.appender.STD.Threshold=INFO

log4j.logger.com.netpulse=<%= @tomcat_log4j_loglevel %>

log4j.logger.com.mchange.v2=ERROR
log4j.logger.net.spy=ERROR
log4j.logger.net.spy.memcached=ERROR
log4j.logger.org.springframework=ERROR
log4j.logger.org.springframework.web=ERROR
log4j.logger.org.springframework.security=ERROR
log4j.logger.org.hibernate=ERROR
log4j.logger.org.apache=ERROR
